<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:weightSum="24"
    android:clickable="true"
    android:background="#ffffff"
    android:focusableInTouchMode="true"
    xmlns:app="http://schemas.android.com/apk/res-auto">


    <View
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:background="#eeeeee"/>


        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="@dimen/Height50dp"
            android:orientation="vertical"
            >

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Mentor"
                android:textSize="@dimen/MainTxt"
                android:textColor="#000000"
                android:layout_centerVertical="true"
                android:layout_marginLeft="10dp"
                />


            <ImageView
                android:id="@+id/iv_close_popup_talentsharing"
                android:layout_width="10dp"
                android:layout_height="10dp"
                android:src="@drawable/icon_delete"
                android:layout_centerVertical="true"
                android:layout_alignParentRight="true"
                android:tint="#000000"
                android:layout_marginRight="10dp"
                />

        </RelativeLayout>

    <View
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:background="#eeeeee"/>


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="@dimen/Height300dp"
        android:orientation="vertical"
        android:gravity="center"
        >



        <LinearLayout
            android:id="@+id/ll_profilecontainer_popup_talentsharing"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical"
            >
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1"
        android:gravity="center"
        >

        <LinearLayout
            android:id="@+id/ll_picture_profile"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_centerInParent="true"
            android:orientation="vertical"
            android:gravity="center"
            >

            <ImageView
                android:id="@+id/iv_picture_talentSharing_popup"
                android:layout_width="@dimen/Height50dp"
                android:layout_height="@dimen/Height50dp"
                android:src="@drawable/picture_basic"
                android:layout_centerInParent="true"
                />


            <RelativeLayout
                android:id="@+id/rv_namegender_container"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@+id/iv_picture_talentSharing_popup"
                android:layout_marginTop="5dp"
                >

            <TextView
                android:id="@+id/tv_name_talentSharing_popup"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerHorizontal="true"
                android:text="박종우"
                android:textSize="@dimen/MainTxt"
                android:textColor="@color/textColor_subject"
                />


                <ImageView
                    android:id="@+id/iv_gender_talentSharing_popup"
                    android:layout_width="10dp"
                    android:layout_height="10dp"
                    android:src="@drawable/icon_male"
                    android:layout_toEndOf="@+id/tv_name_talentSharing_popup"
                    android:tint="@color/textColor_subject"
                    />

                <TextView
                    android:id="@+id/tv_birth_talentSharing_popup"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="1991.01.23"
                    android:textSize="@dimen/AdditionTxt"
                    android:textColor="@color/textColor_addtion"
                    android:layout_marginTop="5dp"
                    android:gravity="center"
                    android:layout_below="@+id/tv_name_talentSharing_popup"
                    />

            </RelativeLayout>

        </LinearLayout>


    </LinearLayout>
    <View
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:background="#eeeeee"/>


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1"
        android:gravity="center"
        android:orientation="vertical"
        >


        <ImageView
            android:id="@+id/iv_talent_talentSharing_popup"
            android:layout_width="@dimen/Height50dp"
            android:layout_height="@dimen/Height50dp"
            android:src="@drawable/test_sports"
            android:layout_centerInParent="true"
            />


        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="운동/스포츠"
            android:layout_marginTop="5dp"
            android:textColor="@color/textColor_subject"
            android:textSize="@dimen/MainTxt"
            />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="#헬스 #크로스핏 #운동 #마라톤"
            android:layout_marginTop="5dp"
            android:textColor="@color/textColor_addtion"
            android:textSize="@dimen/AdditionTxt"
            />

    </LinearLayout>
    <View
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:background="#eeeeee"
        />
        </LinearLayout>
        <LinearLayout
            android:id="@+id/ll_mapcontainer_popup_talentsharing"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical"
            android:padding="10dp"
            android:visibility="gone"
            >
            <TextView
                android:layout_width="match_parent"
                android:layout_height="@dimen/Height30dp"
                android:textSize="@dimen/SubTxt"
                android:textColor="@color/textColor_subject"
                android:singleLine="true"
                android:gravity="center"
                android:text="경기도 고양시 일산동구 무궁화로 43-15"
                />

            <ImageView
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:src="@drawable/test_map"
                android:adjustViewBounds="true"
                android:scaleType="fitXY"
                />

        </LinearLayout>


    </LinearLayout>


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="@dimen/Height60dp"
        android:gravity="center"
        android:orientation="horizontal"
        android:background="#fcfcfc"
        >


        <LinearLayout
            android:id="@+id/ll_map_popup_talentsharing"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:orientation="vertical"
            android:gravity="center"
            >

            <ImageView
                android:id="@+id/iv_map_popup_talentsharing"
                android:layout_width="@dimen/Icon20dp"
                android:layout_height="@dimen/Icon20dp"
                android:src="@drawable/icon_map"
                android:tint="@color/textColor_object"
                />

            <TextView
                android:id="@+id/tv_map_popup_talentsharing"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="위치"
                android:layout_marginTop="5dp"
                android:textColor="@color/textColor_object"
                android:textSize="@dimen/AdditionTxt"
                />

        </LinearLayout>

        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:orientation="vertical"
            android:gravity="center"
            >

            <ImageView
                android:layout_width="@dimen/Icon20dp"
                android:layout_height="@dimen/Icon20dp"
                android:src="@drawable/icon_friend2"
                android:tint="@color/textColor_object"
                />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="친구 추가"
                android:layout_marginTop="5dp"
                android:textColor="@color/textColor_object"
                android:textSize="@dimen/AdditionTxt"
                />

        </LinearLayout>

        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:orientation="vertical"
            android:gravity="center"
            >

            <ImageView
                android:layout_width="@dimen/Icon20dp"
                android:layout_height="@dimen/Icon20dp"
                android:src="@drawable/icon_homebottom_chat"
                android:tint="@color/textColor_object"
                />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="메시지"
                android:layout_marginTop="5dp"
                android:textColor="@color/textColor_object"
                android:textSize="@dimen/AdditionTxt"
                />

        </LinearLayout>

        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:orientation="vertical"
            android:gravity="center"
            >

            <ImageView
                android:layout_width="@dimen/Icon20dp"
                android:layout_height="@dimen/Icon20dp"
                android:src="@drawable/home_sports_icon"
                android:scaleType="fitXY"
                android:tint="@color/textColor_object"
                />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Mentor 요청"
                android:layout_marginTop="5dp"
                android:textColor="@color/textColor_object"
                android:textSize="@dimen/AdditionTxt"
                />

        </LinearLayout>

    </LinearLayout>




</LinearLayout>